// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

generator dbml {
  provider = "prisma-dbml-generator"
}

// Rename to LegalEntity
model Customer {
  id             Int       @id @default(autoincrement())
  email          String    @unique
  clientName     String
  legalAdress    String
  deliveryAdress String
  pvnCode        String
  account        String
  bankName       String
  invoice        Invoice[]
  bill           Bill[]
}

model Products {
  id    Int    @id @default(autoincrement())
  name  String
  price Float
  unit  String
}

model Driver {
  id      Int       @id @default(autoincrement())
  name    String
  invoice Invoice[]
}

model Transport {
  id      Int       @id @default(autoincrement())
  name    String
  number  String
  invoice Invoice[]
}

model Invoice {
  id              Int              @id @default(autoincrement())
  dateCreated     String
  dateDelivered   String
  datePaymentDue  String
  invoiceProducts InvoiceProduct[]
  customer        Customer         @relation(fields: [customerId], references: [id])
  customerId      Int
  driver          Driver           @relation(fields: [driverId], references: [id])
  driverId        Int
  transport       Transport        @relation(fields: [transportId], references: [id])
  transportId     Int
  discount        Float
  status          String
  createdBy       String
}

model Bill {
  id             Int           @id @default(autoincrement())
  dateCreated    String
  dateDelivered  String
  datePaymentDue String
  billProducts   BillProduct[]
  customer       Customer      @relation(fields: [customerId], references: [id])
  customerId     Int
  discount       Float
  status         String
  createdBy      String
}

model InvoiceProduct {
  id          Int     @id @default(autoincrement())
  quantity    Int
  productName String
  price       Float
  unit        String
  invoice     Invoice @relation(fields: [invoiceId], references: [id])
  invoiceId   Int
}

model BillProduct {
  id          Int    @id @default(autoincrement())
  quantity    Int
  productName String
  price       Float
  unit        String
  bill        Bill   @relation(fields: [billId], references: [id])
  billId      Int
}
