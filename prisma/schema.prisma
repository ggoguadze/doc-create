// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

// Rename to LegalEntity
model Customer {
  id             Int     @id @default(autoincrement())
  email          String  @unique
  clientName     String
  legalAdress    String
  deliveryAdress String
  pvnCode        String
  account        String
  bankName       String
  orders         Order[]
}

model Products {
  id    Int    @id @default(autoincrement())
  name  String
  price Float
  unit  String
}

// TODO use person model instead of user and driver
model User {
  id   Int    @id @default(autoincrement())
  name String
}

model Driver {
  id     Int     @id @default(autoincrement())
  name   String
  orders Order[]
}

model Transport {
  id     Int     @id @default(autoincrement())
  name   String
  number String
  orders Order[]
}

model Order {
  id             Int            @id @default(autoincrement())
  dateCreated    String
  dateDelivered  String
  datePaymentDue String
  orderProducts  OrderProduct[]
  customer       Customer       @relation(fields: [customerId], references: [id])
  customerId     Int
  driver         Driver         @relation(fields: [driverId], references: [id])
  driverId       Int
  transport      Transport      @relation(fields: [transportId], references: [id])
  transportId    Int
  discount       Float
  documentType   String
}

model OrderProduct {
  id          Int    @id @default(autoincrement())
  quantity    Int
  productName String
  price       Float
  unit        String
  order       Order  @relation(fields: [orderId], references: [id])
  orderId     Int
}

